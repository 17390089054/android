  	<select id="queryRoleByUserId" resultMap="userRole">
  		SELECT 
  			<include refid="role_column"/>,<include refid="com.wrf.dao.UserDao.user_column"/>
  		FROM 
  			role
  		LEFT JOIN USER ON
